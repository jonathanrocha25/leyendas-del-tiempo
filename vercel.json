{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/empleado/(.+)$", "dest": "api/index.js" },
    { "src": "^/api/qr$", "dest": "api/qr.js" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^(?!/api|/empleado).*", "dest": "/public/index.html" }
  ]
}
